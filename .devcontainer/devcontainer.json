{
	"name": "hotcities-data",

	"image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",

	"features": {
		"ghcr.io/devcontainers-contrib/features/poetry:2": {}
	},

	"postCreateCommand": "poetry install",

	"customizations": {
        "vscode": {
            "settings": {
                "python.pythonPath": "/home/vscode/.cache/pypoetry/virtualenvs/hotcities-data-9XZmxUXv-py3.11/bin/python",
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black"
            },
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ]
        }
    }
}
